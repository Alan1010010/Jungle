
      <% unless current_user == @user %>
        <% if current_user.is_following?(@user.id) %>
          <%= link_to "Unfollow", unfollow_user_path(@user, index: true), :method => :post, class: "btn btn-primary", remote: true  %>
        <% else %>
          <%= link_to "Follow", follow_user_path(@user, index: true), :method => :post, class: "btn btn-primary", remote: true  %>
        <% end %>
      <% end %>
